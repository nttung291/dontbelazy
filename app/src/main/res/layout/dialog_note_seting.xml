<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_height="match_parent"
            android:textColor="#5bb4f4"
            android:background="#fff"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/fab_margin"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="Edit reminder"
            android:paddingLeft="@dimen/fab_margin" />

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0086fc"/>
    </RelativeLayout>

    <LinearLayout

        android:padding="20dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9f9f9f"/>

            <com.example.sonnv.dontbelazy.adapter.notes.NDSpinner
                android:id="@+id/spinner_date"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/padding">

            </com.example.sonnv.dontbelazy.adapter.notes.NDSpinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9f9f9f"/>

            <com.example.sonnv.dontbelazy.adapter.notes.NDSpinner
                android:id="@+id/spinner_time"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/padding">

            </com.example.sonnv.dontbelazy.adapter.notes.NDSpinner>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_delete_edit"
            android:layout_marginLeft="@dimen/fab_margin"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"/>

        <TextView
            android:id="@+id/tv_huy_edit"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_toLeftOf="@+id/tv_save_edit"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"/>

        <TextView
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:id="@+id/tv_save_edit"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"/>
    </RelativeLayout>
</LinearLayout>