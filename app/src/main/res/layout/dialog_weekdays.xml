<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <TextView
        android:background="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="@dimen/fab_margin"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="Pick Day"
        android:paddingLeft="@dimen/fab_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_dayWeeks_sun"
            android:text="SUN"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_circle_50dp" />

        <TextView
            android:id="@+id/tv_dayWeeks_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:background="@drawable/shape_white_circle_50dp"
            android:gravity="center"
            android:text="MON"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dayWeeks_tue"
            android:text="TUE"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_circle_50dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_dayWeeks_wed"
            android:text="WED"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_circle_50dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_dayWeeks_thu"
            android:text="THU"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_circle_50dp" />

        <TextView
            android:id="@+id/tv_dayWeeks_fri"
            android:text="FRI"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_circle_50dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin" />

        <TextView
            android:id="@+id/tv_dayWeeks_sat"
            android:text="SAT"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_circle_50dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_dialog_day_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="DONE"/>

</LinearLayout>