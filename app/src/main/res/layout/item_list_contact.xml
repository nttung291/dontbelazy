<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_sex_cv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/padding"
                android:layout_centerVertical="true"
                android:transitionName="@string/simple_contact"
                tools:ignore="UnusedAttribute"/>
            <TextView
                android:id="@+id/tv_name_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Thanh Tung"
                android:textColor="#555555"
                android:layout_toRightOf="@id/iv_sex_cv"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/padding"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_subject_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Co so du lieu"
                android:textColor="#555555"
                android:layout_marginLeft="@dimen/padding"
                android:layout_toRightOf="@id/iv_sex_cv"
                android:layout_below="@id/tv_name_cv"
                android:textSize="14sp"
                android:textStyle="italic"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>